<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:padding="5dp"
    tools:context="com.example.trion.loginexample.ForgetPasswordActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tv_input"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="输入新密码："
            android:gravity="left|center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editext_selector"
            android:gravity="left|center"
            android:layout_toEndOf="@+id/tv_input"
            android:layout_toRightOf="@+id/tv_input"
            android:hint="请输入新密码"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:maxLength="11"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:inputType="numberPassword"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="确认新密码："
            android:gravity="left|center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />
        <EditText
            android:id="@+id/et_confrim_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/editext_selector"
            android:gravity="left|center"
            android:layout_toEndOf="@+id/tv_confirm"
            android:layout_toRightOf="@+id/tv_confirm"
            android:hint="请再次输入新密码"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:maxLength="11"
            android:textColorHint="@android:color/darker_gray"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:inputType="numberPassword"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tv_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="　　验证码："
            android:gravity="left|center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_verify_code">
            <EditText
                android:id="@+id/et_verify_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/editext_selector"
                android:gravity="left|center"
                android:hint="请输入验证码"
                android:textColor="@android:color/black"
                android:textSize="17sp"
                android:maxLength="6"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:inputType="numberPassword"
                />
            <Button
                android:id="@+id/btn_verify_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:text="获取验证码"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:gravity="center"/>

        </FrameLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="确定" />
</LinearLayout>
